@model List<EmployeeDataFromDb>
@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Age</th>
            <th scope="col">Gender</th>
            <th scope="col">Department</th>
            <th scope="col">Language</th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (EmployeeDataFromDb employee in Model)
        {
            <tr>
                <td >@employee.EmployeeName</td>
                <td>@employee.EmployeeSurname</td>
                <td>@employee.EmployeeAge</td>
                <td>@employee.EmployeeGender</td>
                <td>@employee.DepartmentName</td>
                <td>@employee.ProgrammingLanguageName</td>
                <td>
                    <a asp-controller="employee" asp-action="RedirectToProfile" asp-route-id="@employee.EmployeeId">Change</a>
                    <a asp-controller="employee" asp-action="delete" asp-route-id="@employee.EmployeeId">Delete</a>

                    </td>
                
            </tr>
        }

    </tbody>
</table>

