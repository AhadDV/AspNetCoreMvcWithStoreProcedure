@model EmployeeEditDto

@{
    ViewData["Title"] = "Edit";
}
<section class="h-100 h-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">

                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Edit Employee</h3>

                        <form method="post" class="px-md-2">

                            <div class="form-outline mb-4">
                                <input type="text" asp-for="@Model.EmployeeName" class="form-control" />
                                <label class="form-label" asp-for="@Model.EmployeeName">Name</label>
                                <span asp-validation-for="@Model.EmployeeName" class="text text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="text" asp-for="@Model.EmployeeSurname" class="form-control" />
                                <label class="form-label" asp-for="@Model.EmployeeSurname">Surname</label>
                                <span asp-validation-for="@Model.EmployeeSurname" class="text text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <input asp-for="@Model.EmployeeAge" class="form-control" />
                                <label class="form-label" asp-for="@Model.EmployeeAge">Age</label>
                                <span asp-validation-for="@Model.EmployeeAge" class="text text-danger"></span>
                            </div>



                            <div class="mb-4">

                                <div class="row justify-content-between">
                                    <div class="col-md-6">
                                        <select asp-for="@Model.DepartmentId" class=" departament select">
                                           
                                            @foreach (Department department in ViewBag.Departments)
                                            {
                                                @if (department.Id == Model.DepartmentId)
                                                {
                                                    <option value="@department.Id" selected>@department.Name</option>
                                                }
                                                else{
                                                    <option value="@department.Id" >@department.Name</option>
                                                }
                                            }
                                        </select>
                                         <label class="form-label" asp-for="@Model.DepartmentId">Department</label>
                                        <br />
                                        <span asp-validation-for="@Model.DepartmentId" class="text text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <select asp-for="@Model.ProgrammingLanguageId" class=" programming select">
                                           <option value="@Model.ProgrammingLanguageId">@Model.ProgrammingLanguageName</option>
                                        </select>
                                         <label class="form-label" asp-for="@Model.ProgrammingLanguageId">ProgrammingLanguage</label>
                                        <br />
                                    <span asp-validation-for="@Model.ProgrammingLanguageId" class="text text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="form-outline mb-4">
                                    <select asp-for="@Model.EmployeeGender" class="select">
                                        <option value="Female">Female</option>
                                        <option value="Male">Male</option>
                                    </select>
                                <label class="form-label" asp-for="@Model.EmployeeGender">Gender</label>
                                    <br />
                                 <span asp-validation-for="@Model.EmployeeGender" class="text text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-secondary btn-lg mb-1">Submit</button>
                                <a asp-validation-for="employee" asp-action="index" class="btn btn-secondary btn-lg mb-1">Cancel</a>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
